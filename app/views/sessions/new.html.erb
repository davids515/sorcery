<h1>Log In</h1>

<%= render 'shared/messages' %>

<%= simple_form_for @user, url: login_path do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %><br>
    </div>

    <div class="form-actions">
      <%= f.submit 'Log In', class: 'btn btn-primary' %>
      <%= link_to 'Need a new account?', registration_path, class: 'btn btn-success' %>
      <%= link_to 'Forgot Password?', new_password_reset_path, class: 'btn btn-default' %>
    </div>
<% end %>
