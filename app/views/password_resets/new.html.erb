<h1>Forgot Password?</h1>

<%= simple_form_for @user, url: password_resets_path do |f| %>
    <%= render 'shared/messages' %>

    <div class="form-inputs">
      <%= f.input :email %>
    </div>

    <div class="forms-actions">
      <%= f.submit "Reset my password!", class: 'btn btn-success' %>
    </div>
<% end %>
